<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomAppBar">@color/bottom_menu_color</item>
        <item name="backgroundMain">@color/white</item>
        <item name="colorSurface">@color/design_default_color_surface</item>
        <item name="android:fontFamily">?attr/fontFamily</item>
        <item name="fontFamily">?attr/fontFamily</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>
</resources>